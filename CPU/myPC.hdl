/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP myPC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
	Inc16(in=out1 , out=inc0);
	Mux16(a=out1, b=inc0, sel=inc, out=load0);
	Mux16(a=load0, b=in, sel=load, out=reset0);
	Mux16(a=reset0, b=false, sel=reset, out=reg0);
	Register(in=reg0, load=true, out=out1, out=out);
}
